// prisma/schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["auth"]
}

// ==============================================
// USER AGGREGATE (Aggregate Root)
// ==============================================
model User {
  id              String          @id @default(uuid())
  email           String          @unique
  password        String?         // Password hash - nullable para OAuth users
  role            UserRole        @default(VEHICLE_OWNER)
  
  // Profile (aplanado)
  fullName        String
  phone           String?
  avatarUrl       String?
  
  // OAuth
  oauthProvider   OAuthProvider?
  
  // Metadata
  isEmailVerified Boolean         @default(false)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  // Relaciones (Entidades hijas del agregado)
  refreshTokens   RefreshToken[]
  passwordResets  PasswordReset[]
  
  @@map("users")
  @@schema("auth")
}

// ==============================================
// REFRESH TOKEN (Child Entity)
// ==============================================
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  // Relación con User (Aggregate Root)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("refresh_tokens")
  @@index([userId])
  @@index([token])
  @@schema("auth")
}

// ==============================================
// PASSWORD RESET (Child Entity)
// ==============================================
model PasswordReset {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  // Relación con User (Aggregate Root)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("password_resets")
  @@index([userId])
  @@index([token])
  @@schema("auth")
}

// ==============================================
// ENUMS (Value Objects tipo enumeración)
// ==============================================
enum UserRole {
  VEHICLE_OWNER
  WORKSHOP_ADMIN
  SYSTEM_ADMIN
  
  @@schema("auth")
}

enum OAuthProvider {
  GOOGLE
  EMAIL
  
  @@schema("auth")
}